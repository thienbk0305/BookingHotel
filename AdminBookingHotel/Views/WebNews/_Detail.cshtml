@using System.Net;
@model DataAccess.Models.NewsModels.NewsViewModel

<form asp-action="Update" method="post" role="form" id="NewsDetailModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-purple">
                <h5 class="modal-title text-white">News Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <!-- Row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-body">
                            <input type="hidden" value="@Model?.Id" asp-for="Id" id="modelId" />
                            <input type="hidden" value="@Model?.ImgCodeByUserId" asp-for="ImgCodeByUserId" id="imgCodeByUserId" />
                            <div class="form-group">
                                <label class="control-label mb-2" asp-for="Title">Title</label>
                                <input class="form-control filled-input" @* readonly='@(Model?.Id != null ? "readonly" : null)' *@ type="text" id="modelTitle" value="@Model?.Title" asp -for="Title" class="form-control" required>
                                <span asp-validation-for="Title" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-2" asp-for="SumContent">Summary</label>
                                <input class="form-control filled-input" type="text" id="modelSumContent" value="@Model?.SumContent" asp-for="SumContent" class="form-control" required>
                                <span asp-validation-for="SumContent" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-2" asp-for="NewsContent">Content</label>
                                <textarea cols="50" rows="10" class="form-control filled-input" id="modelNewsContent" asp-for="NewsContent" class="form-control" required></textarea>
                                <span asp-validation-for="NewsContent" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-2" asp-for="Source">Source</label>
                                <input class="form-control filled-input" type="text" id="modelSource" value="@Model?.Source" asp-for="Source" class="form-control" required>
                                <span asp-validation-for="Source" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-2" asp-for="Active">Active/Inactive</label>
                                <div class="input-group">
                                    <label asp-for="Active"
                                           class="switch s-icons s-outline s-outline-success">
                                        <input type="checkbox" asp-for="Active" id="modelActive" checked="@Model?.Active">
                                        <span class="slider round"></span>
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label mb-2">Feature Image</label>
                                <div class="input-group">
                                    <input type="file" id="featureImg" name="featureImg">
                                    <button type="button" id="uploadImg">Upload</button>

                                    <img id="imagePreview" style="max-width: 100%; max-height: 300px;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.modal-content -->
            <div class="modal-footer">
                <div class="form-actions mt-10">
                    <input id="updateBtn" type="button" class="btn btn-info" value="Lưu" />
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
        <!-- /.modal-dialog -->
    </div>
</form>
<script>

    $(document).ready(function () {
        var content = '@Html.Raw(WebUtility.HtmlDecode(@Model?.NewsContent))';
        $('#modelNewsContent').summernote('code', content);

    });
        // CKEDITOR.replace('modelNewsContent');
</script>

